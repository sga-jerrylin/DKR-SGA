# ==================== DKR 1.1 环境变量配置 ====================
# 复制此文件为 .env 并填写实际值

# ==================== DeepSeek Chat API ====================
# Agent 决策和自动分类使用
DEEPSEEK_API_KEY=sk-c9135d51cb8143b8ab782c62579bbceb
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# ==================== DeepSeek OCR API ====================
# 本地部署的 OCR 服务
OCR_API_URL=http://111.230.37.43:5010
OCR_TIMEOUT=300

# ==================== OpenRouter API ====================
# 用于 Gemini 等模型（通过 OpenRouter）
OPENROUTER_API_KEY=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
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ==================== Agent LLM 配置 ====================
# Agent 使用的 LLM 提供商: "deepseek" 或 "gemini"
AGENT_LLM_PROVIDER=deepseek
# Gemini 模型名称（通过 OpenRouter）
AGENT_LLM_MODEL=google/gemini-2.5-flash-preview-09-2025

# ==================== 应用配置 ====================
# 后端服务
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# 前端服务
FRONTEND_PORT=3105

# ==================== 数据存储 ====================
# 数据目录
DATA_DIR=./data
VIDEO_DIR=./data/videos
SUMMARY_DIR=./data/summaries
CACHE_DIR=./ocr_cache

# ==================== Agent 配置 ====================
# Agent 最大迭代次数
AGENT_MAX_ITERATIONS=10
# 置信度阈值
AGENT_CONFIDENCE_THRESHOLD=0.9

# ==================== 文档分类 ====================
# 默认分类
DEFAULT_CATEGORIES=财务类,制度类,研究类,其他

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FILE=./logs/dkr.log

# ==================== CORS 配置 ====================
CORS_ORIGINS=http://localhost:3105,http://127.0.0.1:3105

# ==================== 外部 Agent API ====================
# API Key 管理（可选，用于外部 Agent 调用）
ENABLE_API_KEY_AUTH=false
API_KEYS=key1,key2,key3

