# DKR 1.0 环境变量配置示例
# 复制此文件为 .env 并填写实际值

# ==================== DeepSeek Chat API ====================
# Agent 决策和自动分类使用
DEEPSEEK_API_KEY=sk-your-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# ==================== DeepSeek OCR API ====================
# 本地部署的 OCR 服务
OCR_API_URL=http://43.139.167.250:8200
OCR_TIMEOUT=300

# ==================== 应用配置 ====================
# 后端服务
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# 前端服务
FRONTEND_PORT=3000

# ==================== 数据存储 ====================
# 数据目录
DATA_DIR=./data
VIDEO_DIR=./data/videos
SUMMARY_DIR=./data/summaries
CACHE_DIR=./ocr_cache

# ==================== Agent 配置 ====================
# Agent 最大迭代次数
AGENT_MAX_ITERATIONS=10
# 置信度阈值
AGENT_CONFIDENCE_THRESHOLD=0.9

# ==================== 文档分类 ====================
# 默认分类
DEFAULT_CATEGORIES=财务类,制度类,研究类,其他

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FILE=./logs/dkr.log

# ==================== CORS 配置 ====================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==================== 外部 Agent API ====================
# API Key 管理（可选，用于外部 Agent 调用）
ENABLE_API_KEY_AUTH=false
API_KEYS=key1,key2,key3

