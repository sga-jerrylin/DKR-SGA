# ==================== DKR 1.1 环境变量配置 ====================
# 复制此文件为 .env 并填写实际值

# ==================== DeepSeek Chat API ====================
# Agent 决策和自动分类使用
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# ==================== DeepSeek OCR API ====================
# 本地部署的 OCR 服务
OCR_API_URL=http://111.230.37.43:5010
OCR_TIMEOUT=300

# ==================== OpenRouter API ====================
# 用于 Gemini 等模型（通过 OpenRouter）
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ==================== Agent LLM 配置 ====================
# Agent 使用的 LLM 提供商: "deepseek" 或 "gemini"
AGENT_LLM_PROVIDER=deepseek
# Gemini 模型名称（通过 OpenRouter）
AGENT_LLM_MODEL=google/gemini-2.5-flash-preview-09-2025

# ==================== 应用配置 ====================
# 后端服务
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# ==================== 数据存储 ====================
# 数据目录
DATA_DIR=./data
DOCUMENTS_DIR=./data/documents
VIDEOS_DIR=./data/videos
SUMMARIES_DIR=./data/summaries
INDEXES_DIR=./data/indexes
TEMP_DIR=./data/temp
CACHE_DIR=./data/cache

# ==================== Agent 配置 ====================
# Agent 最大迭代次数
AGENT_MAX_ITERATIONS=10
# 置信度阈值
AGENT_CONFIDENCE_THRESHOLD=0.9

# ==================== 文档分类 ====================
# 默认分类（逗号分隔）
DEFAULT_CATEGORIES=年度调研报告,申请书,中期报告,结项报告,其他

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FILE=./logs/dkr.log

# ==================== CORS 配置 ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ==================== 外部 Agent API ====================
# API Key 管理（可选，用于外部 Agent 调用）
ENABLE_API_KEY_AUTH=false
API_KEYS=

